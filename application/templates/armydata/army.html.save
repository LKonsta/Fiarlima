{% extends "layout.html" %}

{% block body %}
<table>
	<tr>
		<th>tag</th>
		<th>name</th>
		<th>unit types</th>
	</tr>

	{% for armytype in armytypedata %}
	<tr>
		<td>{{ armytype.tag }}</td>
		<td>{{ armytype.name }}</td>
		<td>{{ armytype.unittypes }}</td>
	</tr>
	{% endfor %}
</table>
<table>

	<tr>
		<th>name</th>
		<th>MaxPoints</th>
		<th>MinPoints</th>
	</tr>

	{% for unittype in unittypedata %}
	<tr>
		<td>{{ unittype.name }}</td>
		<td>{{ unittype.MaxPoints }}</td>
		<td>{{ unittype.MinPoints }}</td>
	</tr>
	{% endfor %}

</table>
<table>
	<tr>
                <th> | name | </th>
                <th> | pts | </th>
                <th><
models</th>
		<th>pts/model</th>
		<th>max models</th>
        </tr>

        {% for unit in unitdata %}
        <tr>
                <td>{{ unit.name }}</td>
                <td>{{ unit.start_cost }}</td>
                <td>{{ unit.start_number }}</td>
		<td>{{ unit.cost_per }}</td>
		<td>{{ unit.max_amount }}</td>
        </tr>
        {% endfor %}

</table>
{% endblock %}
